    'attachedObjects':{
      "optional" : true,
      "type" : "array",
      "items": {
        "type" : "object",
        "properties" :{"$ref":"#.properties"}
      }
    },
    'upstreamDuplicates':{"optional" : true,
      "type" : "array",
      "items": {"type" : "string"}
    },
    'downstreamDuplicates':{
      "optional" : true,
      "type" : "array",
      "items": {"type" : "string"}
    }
